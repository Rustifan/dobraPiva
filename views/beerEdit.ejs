<%-layout("/boilerplate/layout.ejs") %>
    <link rel="stylesheet" href="/css/form.css">
    <main>
        <h1>Edit beer</h1>
        <form action="/beer/<%=beer._id%>/edit?_method=PUT" method="POST" novalidate>
            <div>
                <label for="name">Beer name</label>
                <input type="text" id="name" placeholder="ime" name="name" required value=<%=beer.name%>>
            </div>
            <div>
                <label for="beerStyle">beer style</label>
                <input type="text" id="beerStyle" placeholder="beer style" name="beerStyle" required
                    value=<%=beer.beerStyle%> >
            </div>
            <div>
                <label for="location">location</label>
                <input type="text" id="location" placeholder="mjesto" name="location" required value=<%=beer.location%>
                >
            </div>
            <div>
                <label for="description">description</label>
                <textarea id="description" name="description" rows=4 cols=20 required><%=beer.description%></textarea>
            </div>
            
            <div>
                <button>Edit</button>
                <p class="fillMessage">Please fill out missing information</p>
            </div>
    </main>

    <script src="/javascript/validateForm.js"></script>