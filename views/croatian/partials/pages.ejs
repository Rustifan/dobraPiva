            <%}else{%>
            
                <%if(parseInt(page)+i<parseInt(numOfPages)){%>
                <a class="page<%=parseInt(page)+i%>" href="/"><%=parseInt(page)+i%></a>
                <%}%>
            <%}%>

            <%}%>
            
            
        <%}%>
